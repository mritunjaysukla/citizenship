<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Citizenship Application</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <meta name="description" content="Citizenship Application Dashboard - Government of Nepal">
    <meta name="theme-color" content="#ffffff">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
</head>
<body>
    <header class="shadow">
        <div class="header-container">
            <div class="logo-container">
                <img src="/images/gov logo.png.jpeg" alt="Government of Nepal Logo" class="logo-image" style="width: 80px; height: auto;">
                <div class="header-text">
                    <h1>Government of Nepal</h1>
                    <h2>Ministry of Home Affairs</h2>
                    <h3> of Citizenship Registration</h3>
                </div>
            </div>
            <div class="nepal-flag">
                <img src="/images/nepal-flag.png.jpeg" alt="Nepal Flag" class="flag-image" loading="lazy">
            </div>
        </div>
    </header>

   <!-- Navigation Bar -->
   <nav class="main-nav shadow" aria-label="Main navigation">
        <div class="container nav-container">
            <div class="nav-links">
                <a href="/" class="nav-link hover-effect" aria-label="Home">
                    <i class="fas fa-home"></i> 
                    <span>Home</span>
                </a> 
                    
                <a href="/auth/logout" class="nav-link hover-effect" aria-label="Logout">
                    <i class="fas fa-sign-out-alt"></i> 
                    <span>Logout</span>
                </a>
            </div>
        </div>
    </nav>
<!-- Main Dashboard Content -->
<main class="container dashboard">
    <section class="welcome-section card" aria-label="Welcome section">
        <h2>Welcome, <%= user.email %></h2>
        <p class="dashboard-subtitle">Manage your citizenship applications below</p>
    </section>

    <!-- Applications Table -->
    <section class="application-table-section card" aria-label="Applications table">
        <h3 class="section-title">Your Applications</h3>
        <div class="table-responsive">
            <table class="application-table" aria-label="Applications list">
                <thead>
                    <tr>
                        <th scope="col">Request No.</th>
                        <th scope="col">Status</th>
                        <th scope="col">Submitted Date</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% applications.forEach(app => { %>
                        <tr class="table-row-hover">
                            <td><strong>#<%= app.requestNo %></strong></td>
                            <td>
                                <span class="status-badge <%= app.status.toLowerCase() %>" role="status">
                                    <%= app.status %>
                                </span>
                            </td>
                            <td><%= new Date(app.createdAt).toLocaleDateString() %></td>
                            <td class="action-buttons">
                                <a href="/application/status/<%= app.id %>" class="btn view-btn transition-effect" aria-label="View application">
                                    <i class="fas fa-eye"></i> View
                                </a>
                                <% if (app.status === 'DRAFT') { %>
                                    <a href="/application/edit/<%= app.id %>" class="btn edit-btn transition-effect" aria-label="Edit application">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <button type="button" class="btn delete-btn transition-effect" data-application-id="<%= app.id %>" aria-label="Delete application">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </section>

    <!-- No Applications Message -->
    <% if (!applications || applications.length === 0) { %>
        <div class="no-applications card">
            <p>You haven't submitted any applications yet.</p>
            <a href="/application/new" class="btn create-btn transition-effect">
                <i class="fas fa-plus"></i> Create New Application
            </a>
        </div>
    <% } %>
</main>

<!-- Scripts -->
<script>
document.addEventListener('DOMContentLoaded', function () {
    let deleteTimeout;
    
    // Handle delete button clicks
    document.querySelectorAll('.delete-btn').forEach(button => {
        button.addEventListener('click', function () {
            const applicationId = this.getAttribute('data-application-id');
            handleDelete(applicationId);
        });
    });

    async function handleDelete(id) {
        if (confirm('Are you sure you want to delete this application?')) {
            try {
                const response = await fetch(`/application/${id}`, {
                    method: 'DELETE',
                    headers: { 
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    credentials: 'same-origin'
                });

                const data = await response.json();

                if (response.ok) {
                    showNotification('Application deleted successfully.', 'success');
                    // Animate row removal
                    const row = document.querySelector(`[data-application-id="${id}"]`).closest('tr');
                    row.style.transition = 'opacity 0.3s ease';
                    row.style.opacity = '0';
                    setTimeout(() => {
                        row.remove();
                        checkEmptyTable();
                    }, 300);
                } else {
                    showNotification(data.message || 'Failed to delete the application.', 'error');
                }
            } catch (error) {
                console.error('Delete error:', error);
                showNotification('An error occurred while deleting the application.', 'error');
            }
        }
    }

    function showNotification(message, type) {
        clearTimeout(deleteTimeout);
        
        // Remove existing notification
        const existingNotification = document.querySelector('.notification');
        if (existingNotification) {
            existingNotification.remove();
        }

        const notification = document.createElement('div');
        notification.className = `notification ${type}`;
        notification.setAttribute('role', 'alert');
        notification.textContent = message;
        document.body.appendChild(notification);
        
        deleteTimeout = setTimeout(() => {
            notification.style.animation = 'slideOut 0.3s ease-in-out';
            setTimeout(() => notification.remove(), 300);
        }, 3000);
    }

    function checkEmptyTable() {
        const tbody = document.querySelector('.application-table tbody');
        if (!tbody.children.length) {
            location.reload();
        }
    }
});
</script>

<style>
:root {
    --primary-color: #007bff;
    --success-color: #28a745;
    --danger-color: #dc3545;
    --warning-color: #ffc107;
    --info-color: #17a2b8;
    --shadow-color: rgba(0,0,0,0.1);
}

.card {
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 4px var(--shadow-color);
    padding: 20px;
    margin-bottom: 20px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px var(--shadow-color);
}

.shadow {
    box-shadow: 0 2px 4px var(--shadow-color);
}

.section-title {
    color: #333;
    margin-bottom: 20px;
    font-weight: 500;
    position: relative;
    padding-bottom: 10px;
}

.section-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 50px;
    height: 3px;
    background: var(--primary-color);
}

.dashboard-subtitle {
    color: #666;
    margin-top: 5px;
    font-size: 1.1em;
}

.table-responsive {
    overflow-x: auto;
    border-radius: 8px;
    box-shadow: 0 0 10px var(--shadow-color);
}

.application-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    margin-top: 10px;
}

.application-table th {
    background-color: #f5f5f5;
    padding: 15px;
    text-align: left;
    font-weight: 600;
    border-bottom: 2px solid #ddd;
}

.application-table td {
    padding: 15px;
    border-bottom: 1px solid #eee;
    vertical-align: middle;
}

.table-row-hover {
    transition: background-color 0.3s ease;
}

.table-row-hover:hover {
    background-color: #f8f9fa;
}

.transition-effect {
    transition: all 0.3s ease;
}

.hover-effect {
    transition: transform 0.3s ease, color 0.3s ease;
}

.hover-effect:hover {
    transform: translateY(-2px);
    color: var(--primary-color);
}

.status-badge {
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 0.9em;
    font-weight: 500;
    display: inline-block;
    text-align: center;
    min-width: 100px;
    transition: transform 0.2s ease;
}

.status-badge:hover {
    transform: scale(1.05);
}

.status-badge.draft {
    background-color: #fff3cd;
    color: #856404;
    border: 1px solid #ffeeba;
}

.status-badge.pending {
    background-color: #cce5ff;
    color: #004085;
    border: 1px solid #b8daff;
}

.status-badge.approved {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
}

.status-badge.rejected {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
}

.btn {
    padding: 8px 16px;
    border-radius: 4px;
    border: none;
    cursor: pointer;
    font-weight: 500;
    margin-right: 8px;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
}

.btn i {
    font-size: 1.1em;
}

.view-btn {
    background-color: var(--primary-color);
    color: white;
}

.edit-btn {
    background-color: var(--success-color);
    color: white;
}

.delete-btn {
    background-color: var(--danger-color);
    color: white;
}

.create-btn {
    background-color: var(--success-color);
    color: white;
    margin-top: 15px;
}

.btn:hover {
    opacity: 0.9;
    transform: translateY(-1px);
    box-shadow: 0 2px 4px var(--shadow-color);
}

.btn:active {
    transform: translateY(0);
}

.notification {
    position: fixed;
    top: 20px;
    right: 20px;
    padding: 15px 25px;
    border-radius: 4px;
    color: white;
    animation: slideIn 0.3s ease-in-out;
    z-index: 1000;
    box-shadow: 0 2px 10px var(--shadow-color);
}

.notification.success {
    background-color: var(--success-color);
}

.notification.error {
    background-color: var(--danger-color);
}

@keyframes slideIn {
    from {
        transform: translateX(100%);
        opacity: 0;
    }
    to {
        transform: translateX(0);
        opacity: 1;
    }
}

@keyframes slideOut {
    from {
        transform: translateX(0);
        opacity: 1;
    }
    to {
        transform: translateX(100%);
        opacity: 0;
    }
}

.no-applications {
    text-align: center;
    padding: 40px;
}

.no-applications p {
    font-size: 1.2em;
    color: #666;
    margin-bottom: 20px;
}

body {
    font-family: 'Roboto', sans-serif;
    background-color: #f8f9fa;
    color: #333;
    line-height: 1.6;
}

@media (max-width: 768px) {
    .action-buttons {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .btn {
        width: 100%;
        margin-right: 0;
        justify-content: center;
    }

    .status-badge {
        min-width: auto;
    }
}
</style>
</body>
</html>