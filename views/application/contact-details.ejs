<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Details - Citizenship Application</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <header>
        <div class="header-container">
            <div class="logo-container">
                <img src="/images/gov logo.png.jpeg" alt="Government of Nepal Logo">
                <div class="header-text">
                    <h1>Government of Nepal</h1>
                    <h2>Ministry of Home Affairs</h2>
                    <h3>Department of Citizenship Registration</h3>
                </div>
            </div>
            <div class="nepal-flag">
                <img src="/images/nepal-flag.png.jpeg" alt="Nepal Flag" alt="Nepal Flag">
            </div>
        </div>
    </header>
          <nav>
              <div class="nav-container" style="display: flex; justify-content: space-between;">
                  <a href="/" class="nav-item home-link">
                      <i class="fa fa-home"></i> Home
                  </a>
                  <a href="javascript:history.back()" class="nav-item back-link">
                      <i class="fas fa-arrow-left"></i> Back
                  </a>
              </div>
    </nav>
    <main>
       <!-- Add this tab navigation to all form templates -->
       <div class="tab-container">
        <div class="tab <%= currentPath.includes('applicant-data') ? 'active' : '' %>">
            <i class="fas fa-user"></i> Applicant Data
        </div>
        <div class="tab <%= currentPath.includes('contact-details') ? 'active' : '' %>">
            <i class="fas fa-address-book"></i> Contact Details
        </div>
        <div class="tab <%= currentPath.includes('family-details') ? 'active' : '' %>">
            <i class="fas fa-users"></i> Family Details
        </div>
        <div class="tab <%= currentPath.includes('documents') ? 'active' : '' %>">
            <i class="fas fa-file-upload"></i> Documents
        </div>
        <div class="tab <%= currentPath.includes('appointment') ? 'active' : '' %>">
            <i class="fas fa-calendar-check"></i> Appointment
        </div>
        <div class="tab <%= currentPath.includes('preview') ? 'active' : '' %>">
            <i class="fas fa-eye"></i> Preview
        </div>
    </div>

        <div class="form-container">
            <h2 class="section-title">Contact Information</h2>
            <form action="/application/contact-details/<%= application.id %>" method="POST">
                <!-- Permanent Address -->
                <div class="address-section">
                    <h3>Permanent Address <span class="asterisk">*</span></h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="permanentProvince">Province<span class="asterisk">*</span></label>
                            <select name="province" id="permanentProvince" required>
                                <option value="">Select Province</option>
                                <option value="Province1">Province 1</option>
                                <option value="Madhesh">Madhesh</option>
                                <option value="Bagmati">Bagmati</option>
                                <option value="Gandaki">Gandaki</option>
                                <option value="Lumbini">Lumbini</option>
                                <option value="Karnali">Karnali</option>
                                <option value="Sudurpashchim">Sudurpashchim</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="permanentDistrict">District<span class="asterisk">*</span></label>
                            <select name="permanentAddress[district]" id="permanentDistrict" required>
                                <option value="">Select District</option>
                                <!-- Districts will be populated based on province -->
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="permanentMunicipality">Municipality/VDC<span class="asterisk">*</span></label>
                            <input type="text" name="permanentAddress[municipality]" id="permanentMunicipality" required>
                        </div>
                        <div class="form-group">
                            <label for="permanentWard">Ward No.<span class="asterisk">*</span></label>
                            <input type="number" name="permanentAddress[ward]" id="permanentWard" min="1" max="32" required>
                        </div>
                        <div class="form-group">
                            <label for="permanentTole">Tole/Street</label>
                            <input type="text" name="permanentAddress[tole]" id="permanentTole">
                        </div>
                    </div>
                </div>

                <!-- Contact Information -->
                <div class="contact-section">
                    <h3>Contact Information</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="phoneNumber">Phone Number<span class="asterisk">*</span></label>
                            <input type="tel" name="phoneNumber" id="phoneNumber" required>
                        </div>
                        <div class="form-group">
                            <label for="mobileNumber">Mobile Number<span class="asterisk">*</span></label>
                            <input type="tel" name="mobileNumber" id="mobileNumber" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" name="email" id="email">
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="submit-btn">
                        <i class="fas fa-save"></i> Save and Continue
                    </button>
                </div>
            </form>
        </div>
    </main>

    <script src="/js/main.js"></script>
</body>
</html>