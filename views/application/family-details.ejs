<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Family Details - Citizenship Application</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <header>
        <div class="header-container">
            <div class="logo-container">
                <img src="/images/gov logo.png.jpeg" alt="Government of Nepal Logo">
                <div class="header-text">
                    <h1>Government of Nepal</h1>
                    <h2>Ministry of Home Affairs</h2>
                    <h3>Department of Citizenship Registration</h3>
                </div>
            </div>
            <div class="nepal-flag">
                <img src="/images/nepal-flag.png.jpeg" alt="Nepal Flag" class="flag-image" style="width: 80px; height: auto;" loading="lazy">            </div>
        </div>
    </header>
    
    <nav>
        <div class="nav-container" style="display: flex; justify-content: space-between;">
            <a href="/" class="nav-item home-link">
                <i class="fa fa-home"></i> Home
            </a>
            <a href="javascript:history.back()" class="nav-item back-link">
                <i class="fas fa-arrow-right"></i> Back
            </a>
        </div>
</nav>
    <main>
        <div class="tab-container">
            <div class="tab <%= currentPath.includes('applicant-data') ? 'active' : '' %>">
                <i class="fas fa-user"></i> Applicant Data
            </div>
            <div class="tab <%= currentPath.includes('contact-details') ? 'active' : '' %>">
                <i class="fas fa-address-book"></i> Contact Details
            </div>
            <div class="tab <%= currentPath.includes('family-details') ? 'active' : '' %>">
                <i class="fas fa-users"></i> Family Details
            </div>
            <div class="tab <%= currentPath.includes('documents') ? 'active' : '' %>">
                <i class="fas fa-file-upload"></i> Documents
            </div>
            <div class="tab <%= currentPath.includes('appointment') ? 'active' : '' %>">
                <i class="fas fa-calendar-check"></i> Appointment
            </div>
            <div class="tab <%= currentPath.includes('preview') ? 'active' : '' %>">
                <i class="fas fa-eye"></i> Preview
            </div>
        </div>

        <div class="form-container">
            <h2 class="section-title">Family Information</h2>
            <div class="mandatory-notice">
                <span class="asterisk">*</span> These fields are mandatory
            </div>

            <form action="/application/family-details/<%= application.id %>" method="POST">
                <!-- Father's Details -->
                <div class="form-section">
                    <h3>Father's Details</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="fatherName">Father's Full Name<span class="asterisk">*</span></label>
                            <input type="text" id="fatherName" name="fatherName" required>
                        </div>
                        <div class="form-group">
                            <label for="fatherCitizenship">Father's Citizenship No.</label>
                            <input type="text" id="fatherCitizenship" name="fatherCitizenship">
                        </div>
                    </div>
                </div>

                <!-- Mother's Details -->
                <div class="form-section">
                    <h3>Mother's Details</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="motherName">Mother's Full Name<span class="asterisk">*</span></label>
                            <input type="text" id="motherName" name="motherName" required>
                        </div>
                        <div class="form-group">
                            <label for="motherCitizenship">Mother's Citizenship No.</label>
                            <input type="text" id="motherCitizenship" name="motherCitizenship">
                        </div>
                    </div>
                </div>

                <!-- Grandfather's Details -->
                <div class="form-section">
                    <h3>Grandfather's Details</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="grandfatherName">Grandfather's Full Name<span class="asterisk">*</span></label>
                            <input type="text" id="grandfatherName" name="grandfatherName" required>
                        </div>
                    </div>
                </div>

                <!-- Spouse's Details -->
                <div class="form-section">
                    <h3>Spouse's Details (if married)</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="spouseName">Spouse's Full Name</label>
                            <input type="text" id="spouseName" name="spouseName">
                        </div>
                        <div class="form-group">
                            <label for="spouseCitizenship">Spouse's Citizenship No.</label>
                            <input type="text" id="spouseCitizenship" name="spouseCitizenship">
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="submit-btn">
                      <i class="fas fa-save"></i> Save and Continue
                    </button>
                </div>
            </form>
        </div>
    </main>

    <script src="/js/main.js"></script>
</body>
</html>